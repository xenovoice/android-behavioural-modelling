<?xml version="1.0" encoding="utf-8"?>
<android.support.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey"
    android:padding="@dimen/box_inset_layout_padding"
    android:keepScreenOn="true"
    tools:context=".MainActivity"
    tools:deviceIds="wear">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_grey"
        android:padding="5dp"
        app:boxedEdges="all"
        tools:context="com.xv.activityrecognition.MainActivity">

        <TableRow
            android:id="@+id/title_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="2dp"
            android:textAlignment="center">

            <TextView
                android:id="@+id/title"
                android:layout_weight="1"
                android:text="@string/activity"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textView"
                android:layout_weight="1"
                android:text="@string/probability"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold|italic" />
        </TableRow>

        <TableRow
            android:id="@+id/drinking_row"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="2dp">

            <TextView
                android:id="@+id/eatingdrinking_title"
                android:layout_weight="1"
                android:text="@string/eatingdrinking"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/eatingdrinking_prob"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="12sp" />
        </TableRow>

        <TableRow
            android:id="@+id/walking_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="2dp">

            <TextView
                android:id="@+id/walking_title"
                android:layout_weight="1"
                android:text="@string/walking"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/walking_prob"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="12sp" />
        </TableRow>

        <TableRow
            android:id="@+id/running_row"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="2dp">

            <TextView
                android:id="@+id/running_title"
                android:layout_weight="1"
                android:text="@string/running"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/running_prob"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="12sp" />
        </TableRow>

        <TableRow
            android:id="@+id/jumpingjack_row"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="2dp">

            <TextView
                android:id="@+id/jumpingjack_title"
                android:layout_weight="1"
                android:text="@string/jumpingjack"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/jumpingjack_prob"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="12sp" />
        </TableRow>

        <TableRow
            android:id="@+id/sendbutton_row"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="2dp">


            <Button
                android:id="@+id/sendbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send" />
        </TableRow>


    </TableLayout>
</android.support.wear.widget.BoxInsetLayout>